<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waterworld.watch.home.activity.BabyRelationShipActivity"
    android:orientation="vertical">

    <include layout="@layout/common_header"/>

    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_relationship"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "18dp"
            android:layout_marginTop = "18dp"
            android:layout_marginBottom = "18dp"
            android:text = "@string/relationship_with_baby"
            android:textColor = "#000000"
            android:textSize = "16sp" />

        <EditText
            android:id="@+id/et_relationship"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_centerVertical = "true"
            android:layout_toEndOf="@+id/tv_relationship"
            android:gravity="end"
            android:layout_marginEnd = "21dp"
            android:layout_alignParentEnd="true"
            android:textCursorDrawable = "@drawable/edit_cursor"
            android:background="#FFFFFF"
            android:textSize="14sp"
            android:textColor="@color/gray_3"
            android:hint = "@string/relationship_with_baby" />
    </RelativeLayout>
</LinearLayout>
