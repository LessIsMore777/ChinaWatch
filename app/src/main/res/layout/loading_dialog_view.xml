<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_loading">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.waterworld.watch.common.customview.dialog.LVCircularRing
                android:id="@+id/lv_circularring"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <com.waterworld.watch.common.customview.dialog.LoadCircleView
        android:id="@+id/lcv_circleload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.waterworld.watch.common.customview.dialog.RightDiaView
        android:id="@+id/rdv_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.waterworld.watch.common.customview.dialog.WrongDiaView
        android:id="@+id/wv_wrong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />
</LinearLayout>